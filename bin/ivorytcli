#!/usr/bin/env bash

# Config
## ----------------------------------
set -e

IVORYTCLI_WORKDIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)

COMMANDS_DIR="$IVORYTCLI_WORKDIR/commands"

export IVORYTCLI_WORKDIR

# shellcheck source=/dev/null
. "$IVORYTCLI_WORKDIR/modules/dependencies" # check dependencies
. "$IVORYTCLI_WORKDIR/modules/common" # load common functions and vars
. "$IVORYTCLI_WORKDIR/modules/resolver" # load resolver functions
. "$IVORYTCLI_WORKDIR/modules/helper" # load helper functions

# Funcntions
## ----------------------------------


# Calls
## ----------------------------------

if [ "$#" -eq 0 ] || [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    cli_help
fi

call_command_run "$@"
