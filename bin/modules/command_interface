#!/bin/env bash

# --------------------------------------------------------
# This file is an abstraction of the interface for the
# commands files
# --------------------------------------------------------

min_help() {
    echo -e "Minimal Help"
}


# Show minimal help
if [ "$#" -eq 0 ] || [ "$1" == "--min-help" ]; then
    min_help
    exit 0
fi
