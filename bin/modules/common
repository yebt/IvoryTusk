#!/usr/bin/env bash

## Common functions

# Logs a message to the console with the script name, timestamp, and a custom message.
#
# Parameters:
#   $1 (string): The custom message to be logged.
#
# Returns:
#   None
cli_log() {
	script_name=${0##*/}
	timestamp=$(date -u +"%Y-%m-%dT%H:%M:%SZ")
	echo "== $script_name $timestamp $1"
}

# Finds the length of the longest element in a list of strings.
#
# Parameters:
#   $@ (string...): The list of strings to search for the longest element.
#
# Returns:
#   (string): The length of the longest element in the list.
find_longest() {
	local longest=0
	for element in "$@"; do
		if [[ ${#element} -gt ${longest} ]]; then
			longest=${#element}
		fi
	done
	echo "$longest"
}

## Common Vars

IVORYTCLI_VERSION="$(cat "$IVORYTCLI_WORKDIR/modules/VERSION" 2>/dev/null)"
export IVORYTCLI_VERSION

## Common Colors

GRAY='\033[0;37m'
YELLOW='\033[0;33m'
GREEN='\033[0;32m'
CYAN='\033[0;36m'
BLUE='\033[0;34m'
MAGENTA='\033[0;35m'
RED='\033[0;31m'
NC='\033[0m' # No Color

BOLD='\e[1m'
ITALIC='\e[3m'

RESET='\e[0m'

TAB="  "
