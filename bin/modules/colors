#!/usr/bin/env bash

## Common Colors

GRAY='\033[0;37m'
YELLOW='\033[0;33m'
GREEN='\033[0;32m'
CYAN='\033[0;36m'
BLUE='\033[0;34m'
MAGENTA='\033[0;35m'
RED='\033[0;31m'
WHITE='\033[0;37m'
NC='\033[0m' # No Color

BG_GRAY='\033[47m'
BG_YELLOW='\033[43m'
BG_GREEN='\033[42m'
BG_CYAN='\033[46m'
BG_BLUE='\033[44m'
BG_MAGENTA='\033[45m'
BG_RED='\033[41m'
BG_WHITE='\033[47m'
BG_NC='\033[49m' # No Color

BOLD='\e[1m'
ITALIC='\e[3m'

RESET='\e[0m'

TAB="  "

error() {
	echo -e "${BG_RED}${WHITE}Error:${RESET} ${RED}$1${RESET}"
}