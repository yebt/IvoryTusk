#!/usr/bin/env bash


# commands_helps - Prints the help messages for all the available commands.
#
# This function searches for all the shell scripts in the COMMANDS_DIR directory and
# prints the help messages for each command. It also groups the commands by module
# and prints the module name before printing the commands.
#
# Parameters:
#   None
#
# Returns:
#   None
commands_helps() {
    result=()
    load_list_of_modules result
    longest="$(find_longest "${result[@]}")"
    actual_module=""
    default_module_name="Commands"
    for command in "${result[@]}"; do
        call_command_help "$command" "$longest" "$default_module_name" actual_module
    done
}

# Print the help message for the CLI.
#
# This function prints the help message for the CLI, including the CLI name, version, and usage information.
# It also calls the `commands_helps` function to display the help messages for the available commands.
#
# Parameters:
#   None
#
# Returns:
#   None
cli_help() {
    cli_name=${0##*/}
    echo -e "\
$BOLD$cli_name$RESET
${GRAY}${ITALIC} Launch the IvoryTusk CLI, a minimalist enviroment manager for PHP projects${RESET}
${GRAY}${ITALIC} Version: ${BOLD}${IVORYTCLI_VERSION}${RESET}

${BOLD}Usage:${RESET} $cli_name ${ITALIC}[command]${RESET}
"
    commands_helps
    exit 1
}